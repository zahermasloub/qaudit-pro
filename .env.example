##############################
# Core Service Configuration #
##############################

# Replace with your actual PostgreSQL credentials.
DATABASE_URL="postgresql://qaudit_user:YOUR_PASSWORD@localhost:5432/qaudit_pro?schema=public"
# Redis instance used for caching, queues, or distributed locks.
REDIS_URL="redis://localhost:6379/0"

########################
# Authentication Setup #
########################

NEXTAUTH_URL="http://localhost:3001"
# Generate a secure secret (32+ chars): https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="YOUR_LONG_RANDOM_SECRET_MINIMUM_32_CHARACTERS"

# OAuth providers (optional examples).
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

##########################
# Application Runtime UI #
##########################

NEXT_PUBLIC_APP_NAME="QAudit Pro"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

#########################
# File Storage & Upload #
#########################

STORAGE_DRIVER="local"
UPLOAD_DIR="./storage"
MAX_FILE_BYTES="52428800"
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,png,jpg,jpeg"

#########################
# Email (Optional SMTP) #
#########################

SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-password"
